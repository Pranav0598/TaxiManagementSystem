@model TaxiManagementSystem.Models.EarningsViewModel


@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <div class="row p-3">
        <div class="col-md-2">
            <div class="card mb-2 shadow-sm">
                <div class="bg-image ripple" data-mdb-ripple-color="light">
                    <img src="~/css/Images/Driver.jpg" class="w-100" />
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <div class="mask" style="background-color: rgba(0, 0, 0, 0.8)">
                            <div class="d-flex justify-content-center align-items-center h-100">
                                <p class="text-white mb-1">Dashboard</p>
                            </div>
                        </div>
                        <div class="hover-overlay">
                            <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card mb-2 shadow-sm">
                <div class="bg-image ripple" data-mdb-ripple-color="light">
                    <img src="~/css/Images/DriversIncome.jpg" class="w-100" />
                    <a asp-area="" asp-controller="Earnings" asp-action="MyEarnings">
                        <div class="mask" style="background-color: rgba(0, 0, 0, 0.8)">
                            <div class="d-flex justify-content-center align-items-center h-100">
                                <p class="text-white mb-0">View My Earning's</p>
                            </div>
                        </div>
                        <div class="hover-overlay">
                            <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card mb-2 shadow-sm">
                <div class="bg-image ripple" data-mdb-ripple-color="light">
                    <img src="~/css/Images/Schedules.jpg" class="w-100" />
                    <a  asp-area="" asp-controller="Schedules" asp-action="DriverSchedule">
                        <div class="mask" style="background-color: rgba(0, 0, 0, 0.8)">
                            <div class="d-flex justify-content-center align-items-center h-100">
                                <p class="text-white mb-0">View Driver's Schedules</p>
                            </div>
                        </div>
                        <div class="hover-overlay">
                            <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card mb-2 shadow-sm">
                <div class="bg-image ripple" data-mdb-ripple-color="light">
                    <img src="~/css/Images/MyAccount.jpg" class="w-100" />
                    <a asp-area="" asp-controller="Home" asp-action="MyAccount">
                        <div class="mask" style="background-color: rgba(0, 0, 0, 0.8)">
                            <div class="d-flex justify-content-center align-items-center h-100">
                                <p class="text-white mb-0">View My Profile</p>
                            </div>
                        </div>
                        <div class="hover-overlay">
                            <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
<div class="row pt-4">
    <div class="col-md-8">
        <div id="chartContainer" style="height: 400px; width: 100%;"></div>
        <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
        <script>
            window.onload = function() {

                var chart = new CanvasJS.Chart("chartContainer",
                    {
                        animationEnabled: true,
                        title: {
                            text: "Income for 2021"
                        },
                        toolTip: {
                            shared: true
                        },
                        axisY: {
                            prefix: "$",
                            title: "Income in (AUD)"
                        },
                        data: [
                            {
                                type: "line",
                                name: "Income (AUD)",
                                showInLegend: true,
                                yValueFormatString: "$#,##0.00",
                                dataPoints: @Html.Raw(ViewBag.DataPoints1)
                            }
                        ]
                    });
                chart.render();

            }
        </script>
    </div>
    <div class="col-md-4">

    </div>
</div>
</div>
