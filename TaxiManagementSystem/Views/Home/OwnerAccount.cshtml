@model TaxiManagementSystem.Models.MyAccountViewModel


@{
    ViewData["Title"] = "My Account";
    Layout = "~/Views/Shared/_OwnerLayout.cshtml";
}



<div class="container">
    <div class="row">
        <h5>Owner details</h5>
    </div>

    <form asp-controller="Home" asp-action="SaveOwnerAccount">
        <input type="hidden" asp-for=@Model.UserId />
        <div class="form-group mb-4">
            <label asp-for=@Model.UserName class="control-label"></label>
            <input asp-for=@Model.UserName class="form-control" disabled/>
            <span asp-validation-for=@Model.UserName class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for=@Model.FirstName class="control-label"></label>
            <input asp-for=@Model.FirstName class="form-control"/>
            <span asp-validation-for=@Model.FirstName class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for=@Model.LastName class="control-label"></label>
            <input asp-for=@Model.LastName class="form-control"/>
            <span asp-validation-for=@Model.LastName class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for=@Model.Email class="control-label"></label>
            <input type="email" asp-for=@Model.Email class="form-control"/>
            <span asp-validation-for=@Model.Email class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for=@Model.Password class="control-label"></label>
            <input type="password" asp-for=@Model.Password class="form-control"/>
            <span asp-validation-for=@Model.Password class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for=@Model.ConfirmPassword class="control-label"></label>
            <input type="password" asp-for=@Model.ConfirmPassword class="form-control"/>
            <span asp-validation-for=@Model.ConfirmPassword class="text-danger"></span>
        </div>
        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block">Update Profile</button>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}